<!DOCTYPE html>
<html lang="en">
    <%- include("common/header"); %>
    <head>
        <title>Skills</title>
    </head>
    <body>
        <h1>Skills</h1>
        <table style="color: white; border: 1;">
            <thead>
                <th>Name</th>
                <th>Description</th>
            </thead>
            <% skills.forEach(function(skill) { %>
            <tr>
                <td><%= skill.Name %></td>
                <td><%= skill.Description %></td>
                <td><a href="/editSkill/<%= skill._id %>"><button>Edit</button></a></td>
                <td><a href="/skills/delete/<%= skill._id %>"><button>Delete</button></a></td>
            </tr>
            <% }); %>
        </table>
        <a href="/addSkill"><button>Add new skill</button></a>
    </body>
</html>
