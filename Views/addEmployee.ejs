<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Add Employee</title>
        <%- include("common/header"); -%> 
    </head>
    <body>
        <h1>Add Employee</h1>
        <form method="post">
            Name: <input type="String" name="name"/>
            <% if (errors["Name"]) { %>
                <p style="color: red;"><%= errors["Name"].message %></p>
            <% } %>
            FM: <input type="String" name="fm"/>
            <% if (errors["FM"]) { %>
                <p style="color: red;"><%= errors["FM"].message %></p>
            <% } %>
            GG: <input type="number" name="gg" min="0" max="25"/>
            <% if (errors["GG"]) { %>
                <p style="color: red;"><%= errors["GG"].message %></p>
            <% } %>
            <input type="submit"/>
        </form>
    </body>
</html>